<%- include ('header.ejs') %>
    <div class="container">
      <h1 class="mb-4 main-heading">Blog Articles...</h1>
      <a href="/articles/new" class="btn btn-create mb-4">Create New Blog</a>
      <% articles.forEach(function(article){ %>
      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title"><%= article.title %></h5>
          <h6 class="card-subtitle mb-2 text-muted">
            <%= article.createdAt.toLocaleDateString() %>
          </h6>
          <p class="card-text"><%= article.description.slice(0, 50) %>....<a href="articles/<%= article.id %>"
            >Read More</a
          ></p>
          <a href="articles/edit/<%= article.id %>" class="btn btn-info"><i class="fa fa-edit"></i></a>
          <form action="/articles/<%= article.id %>?_method=DELETE" method="POST" class="d-inline">
            <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i></button>
          </form>
        </div>
      </div>
      <% }) %>
    </div>
    <%- include ('footer.ejs') %>